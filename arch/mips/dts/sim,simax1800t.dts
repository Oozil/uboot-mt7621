/dts-v1/;
#include "mt7621.dtsi"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

/ {
	model = "SIM SIMAX1800T";
	compatible = "sim,simax1800t", "mediatek,mt7621-soc";

	chosen {
		stdout-path = &uartlite0;
	};

	config {
		reset-button = "reset";
		wps-button = "wps";
		status1-led = "green:status";
		status2-led = "red:status";
	};

	keys {
		compatible = "gpio-keys";

		reset {
			label = "reset";
			gpios = <&gpio 18 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
		};

		wps {
			label = "wps";
			gpios = <&gpio 4 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_WPS_BUTTON>;
		};
	};

	leds {
		compatible = "gpio-leds";

		led-blue {
			label = "blue:status";
			gpios = <&gpio 6 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		led-green {
			label = "green:status";
			gpios = <&gpio 8 GPIO_ACTIVE_LOW>;
			default-state = "on";
		};

		led-red {
			label = "red:status";
			gpios = <&gpio 7 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};
	};
};

&eth {
	status = "okay";
};

&gpio {
	status = "okay";
};

&i2c {
	gpios = <&gpio 3 1>, /* PIN3 as SDA */
		<&gpio 4 1>; /* PIN4 as CLK */
};

&state_default {
	/delete-node/ rgmii2-gpio-pins;
	/delete-node/ spi-pins;
	/delete-node/ sdhci-gpio-pins;
};

&uartlite0 {
	status = "okay";
};
